# Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# JWT Secret
JWT_SECRET=your-jwt-secret-key-here

# Server (backend :5000, web :3000)
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/integrations/github/callback

# Encryption Key (must be exactly 64 hex characters - 32 bytes)
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here-1234567890123456789012345678901234

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key

# Bunny.net Storage & CDN
BUNNY_STORAGE_ZONE_NAME=vormex-storage
BUNNY_STORAGE_API_KEY=your-bunny-storage-api-key
BUNNY_STORAGE_REGION=sg
BUNNY_STORAGE_HOSTNAME=sg.storage.bunnycdn.com
BUNNY_CDN_HOSTNAME=vormex.b-cdn.net
BUNNY_PULL_ZONE_URL=https://vormex.b-cdn.net

# Bunny Stream (Video Transcoding & HLS Streaming)
BUNNY_STREAM_API_KEY=your-bunny-stream-api-key
BUNNY_STREAM_LIBRARY_ID=your-bunny-stream-library-id
BUNNY_STREAM_CDN_HOSTNAME=vz-xxxxx-xxx.b-cdn.net
BUNNY_STREAM_WEBHOOK_SECRET=your-webhook-secret
